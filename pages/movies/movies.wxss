/* pages/movies/movies.wxss */
@import "movie-list/movie-list-template.wxss";
@import "movie-grid/movie-grid-template.wxss";

.container{
  background-color: #f2f2f2
}

.movies-template{
  margin-bottom: 30rpx;
}

.search{
  background: #f2f2f2;
  height: 80rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
}

.search input{
  height: 100%;
  width: 650rpx;
  margin-left: 12rpx;
  font-size: 28rpx;
}

.search-img{
  margin: auto 0 auto 20rpx;
}

.placeholder{
  font-size: 14px;
  color: #d1d1d1;
  margin-left: 20rpx;
}

.search-pannel{
  position: absolute;
  top: 80rpx;
}

.search-cancel{
  width: 30rpx;
  height: 30rpx;
  margin: auto 0 auto 10rpx;
}